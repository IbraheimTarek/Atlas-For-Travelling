<% layout("boilerplate") %>

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-5 card p-5 bg-warning">
      <div class="card text-center bg-dark d-flex">
        <div class="card-header text-light bg-dark flex-row">
          <h2>Choose Creature</h2>
        </div>
        <div class="flex-row">
          <form
            action="/deletecreature?_method=delete"
            method="post"
          >
            <select name="name"
              class="form-select bg-warning rounded-0"
              aria-label="Default select example"
            >
              <option selected>Open this select menu</option>
              <% for(let creature of creatures) {%>
              <option value="<%= creature.name %>"><%= creature.name %></option>
              <% } %>
            </select>
            <div class="card-body d-flex flex-column">
              <button class="btn btn-warning" type="submit">Delete</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
