<% layout("boilerplate") %> 

<div class="container ">
  <div class="card-deck row">
<% for(let place of places) {%>
  <div class="col-xs-16 col-sm-8 col-md-6">
    <!-- Card -->
    <div class="card bg-warning text-dark">
  
      <!--Card image-->
      <div class="view overlay">
        <img class="card-img-top" src="<%= place.photoURL %> " alt="Card image cap">
        <a href="#!">
          <div class="mask rgba-white-slight"></div>
        </a>
      </div>
  
      <!--Card content-->
      <div class="card-body">
  
        <!--Title-->
        <h3 class="card-header bg-dark text-warning"><%= place.name %> </h3>
        <h6 class="card-header"><%= place.country_name%> </h6>
        <!--Text-->
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
        <a href="/places/<%=place.longitude%>&<%=place.latitude%> " class="btn btn-dark">Go somewhere</a>
  
      </div>
  
    </div>
    <!-- Card -->
  </div>

<% } %>
</div>
</div>